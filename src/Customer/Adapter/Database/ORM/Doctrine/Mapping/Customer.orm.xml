<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Customer\Domain\Model\Customer" table="customer">
        <indexes>
            <index name="IDX_customer_name" columns="name"/>
        </indexes>
        <id name="id" type="string" column="id"/>

        <field name="name" length="50" column="name"/>
        <field name="email" length="100" column="email" unique="true"/>
        <field name="password" length="255"/>
        <field name="roles" type="json" column="roles"/>
    </entity>
</doctrine-mapping>